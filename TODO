    $conn = new PDO('mysql:host=localhost;dbname=asterisk', 'cron', '1234');
    $_GET['campaign_id'] = "LIVEA";
    $query = $conn->prepare("SELECT
`dialable_leads`,`campaign_id` FROM
`asterisk`.vicidial_campaign_stats
where `campaign_id` = :campaignId ");
    $query->bindParam(":campaignId" , $_GET['campaign_id'] ,PDO::PARAM_STR);
    $query->execute();
    $allResult = $query->fetchAll();
    echo json_encode($allResult);
